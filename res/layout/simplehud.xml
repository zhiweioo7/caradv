<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/c183dp"
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal">
<LinearLayout 
    android:orientation="vertical"
    android:padding="@dimen/c18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:gravity="center_horizontal">
    <ImageView 
        android:id="@+id/simplehud_image" 
        android:layout_width="@dimen/c24dp"
		android:layout_height="@dimen/c24dp"
		android:layout_gravity="center"/>

	<TextView 
    	android:id="@+id/simplehud_message"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="@dimen/textsize"
    	android:layout_marginTop="@dimen/c6dp" 
    	android:textColor="@color/white"/>
</LinearLayout>
</LinearLayout>